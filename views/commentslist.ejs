<link href='http://fonts.googleapis.com/css?family=Open+Sans:400italic,600' rel='stylesheet' type='text/css'>
<link href="/assets/styles/default.css" rel="stylesheet" type="text/css" />

<h1>Zoe's comment app</h1>
   
<% for (var i=0; i<comments.length; i++) { %>
  <div class="comment">
    <p><%= comments[i] %></p>
  </div>
<% } %>

<form method="POST">
  <h2>Add a comment</h2>
  <input type="text" name="comment">
  <input type="submit">
</form>
